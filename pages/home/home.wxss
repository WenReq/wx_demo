/* pages/home/home.wxss */
swiper {
  height: 350rpx;
}

swiper image {
  height: 100%;
  width: 100%;
}

view {
  padding: 0;
  margin: 0;
}

.grid-list {
  display: flex;
  flex-wrap: wrap;
  border-left: 1px solid #efefef;
  border-top: 1px solid #efefef;
}

.grid-item {
  width: 33.33%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-right: 1px solid #efefef;
  border-bottom: 1px solid #efefef;
  box-sizing: border-box;
}

.grid-item image {
  height: 60rpx;
  width: 60rpx;
}

.grid-item text {
  font-size: 24rpx;
  margin-top: 10rpx;
}